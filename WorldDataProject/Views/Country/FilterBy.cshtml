@{
  Layout = "_Layout";
}

  <div class='container'>
      <div class='row'>
          @{
               await Html.RenderPartialAsync("_CountryForm");
           }
               @foreach (var country in Model)
               {
                  <div class='panel panel-default'>
                      <div class='panel-heading'>@country.GetName()</div>
                      <div class='panel-body'>
                      @country.GetColumn()<br/>
                      </div>
                  </div>
               }
       </div>
  </div>
